{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO Clean",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"--target",
				"clean"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "PlatformIO Build",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run"
			],
			"group": "build",
			"problemMatcher": ["$platformio"]
		},
		{
			"label": "PlatformIO Upload",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"group": "build",
			"problemMatcher": ["$platformio"]
		}
	]
}